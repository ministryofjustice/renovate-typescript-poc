{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":disableDependencyDashboard"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non major NPM dependencies",
      "groupSlug": "all-npm-minor-patch"
    },
    {
      "matchManagers": ["helmv3"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non major Helm dependencies",
      "groupSlug": "all-helm-minor-patch"
    },
    {
      "matchManagers": ["npm"],
      "rangeStrategy": "bump"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["npm"],
      "allowedVersions": "8"
    },
    {
      "matchDatasources": ["docker"],
      "allowedVersions": "18.12-bullseye-slim"
    },
    {
      "matchDatasources": ["orb"],
      "matchPackageNames": ["cimg/node"],
      "allowedVersions": "18.12-browsers"
    }
  ],
  "rebaseWhen": "behind-base-branch",
  "reviewers": ["team:hmpps-incentives"]
}
